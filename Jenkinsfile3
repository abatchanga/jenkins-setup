pipeline {
    agent {
         docker { image 'node:20.11.0-alpine3.19' }
    }
    stages{
        stage('check current directory'){
            steps{
                sh 'pwd'
                sh 'id'
                sh 'python3 --version'
                sh 'npm --version'
            }
        }
        stage('python script'){
            agent {docker { image 'python:3.10-slim' }}
            steps{
                sh 'python3 --version'
           }
        }
    }
}    